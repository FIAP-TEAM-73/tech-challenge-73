        }
    },
    "host": "localhost:9001",
    "basePath": "/api/v1/",
    "tags":[
        {
            "name": "Orders",
            "description": "API for crud order"
        },
        {
            "name": "Products",
            "description": "API for list products"
        },
        {
            "name": "Customer",
            "description": "API for login user"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "consumes":[
        "application/json"
    ],
    "paths":{
        "/orders":{
            "parameters":[
                {
                    "in": "query",
                    "name": "cpf",
                    "description": "cpf do cliente",
                    "type": "string"
                }
            ],
            "get":{
                "tags":[
                    "Orders"
                ],
                "summary": "Get all orders by customer",
                "responses":{
                    "200":{
                        "description": "OK",
                        "schema":{
                            "$ref": "#/definitions/Orders"
                        }
                    }
                }
            }
        },
        "/order":{
            "post":{
                "tags":[
                    "Orders"
                ],
                "summary": "Create a new order",
                "parameters":[
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Order created by customer",
                        "schema":{
                            "$ref": "#/definitions/Order"
                        }
                    }
                ],
                "produces":[
                    "application/json"
                ],
                "responses":{
                    "201":{
                        "description": "OK"
                    }
                }
            }
        },
        "/order/{id}":{
            "patch":{
                "tags":[
                    "Orders"
                ],
                "summary": "Edit products in the order",
                "parameters":[
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Order updated by customer",
                        "type": "string",
                        "required": true
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Order updated by customer",
                        "schema":{
                            "$ref": "#/definitions/ItemsOrder"
                        }
                    }
                ],
                "produces":[
                    "application/json"
                ],
                "responses":{
                    "200":{
                        "description": "OK",
                        "schema":{
                            "$ref": "#/definitions/ItemsOrder"
                        }
                    }
                }
            },
            "delete":{
                "tags":[
                    "Orders"
                ],
                "summary": "Delete product in the order",
                "parameters":[
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Order update by customer",
                        "type": "integer"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Order updated by customer",
                        "schema":{
                            "$ref": "#/definitions/ItemsOrder"
                        }
                    }
                ],
                "produces":[
                    "application/json"
                ],
                "responses":{
                    "200":{
                        "description": "OK",
                        "schema":{
                            "$ref": "#/definitions/ItemsOrder"
                        }
                    }
                }
            }
        },
        "/products":{
            "parameters": [
                {
                    "name": "categoryId",
                    "in": "query",
                    "required": true,
                    "description": "ID of the category",
                    "type": "string"
                }
            ],
            "get":{
                "tags":[
                    "Products"
                ],
                "summary": "Get all products by category",
                "responses":{
                    "200":{
                        "description": "OK",
                        "schema":{
                            "$ref": "#/definitions/Products"
                        }
                    }
                }
            }
        },
        "/customer":{
            "post":{
                "tags":[
                    "Customer"
                ],
                "summary": "Create a new customer by cpf",
                "parameters":[
                    {
                        "in": "body",
                        "name": "body",
                        "description": "New customer created",
                        "schema":{
                            "$ref": "#/definitions/Customer"
                        }
                    }
                ],
                "produces":[
                    "application/json"
                ],
                "responses":{
                    "201":{
                        "description": "OK"
                    }
                }
            }
        },
        "/customers/{cpf}":{
            "parameters": [
                {
                    "name": "cpf",
                    "in": "path",
                    "required": true,
                    "description": "ID of the customer",
                    "type": "string"
                }
            ],
            "get":{
                "tags":[
                    "Customer"
                ],
                "summary": "Get customer by id",
                "responses":{
                    "200":{
                        "description": "OK",
                        "schema":{
                            "$ref": "#/definitions/Customer"
                        }
                    }
                }
            }
        }
