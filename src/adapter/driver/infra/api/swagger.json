                },
                "categoryId": {
                    "type": "string"
                },
                "unitPrice": {
                    "type": "integer"
                },
                "updatedAt": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string"
                }
            }
        },
        "Products":{
